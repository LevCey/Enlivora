{% comment %}
  Enlivora Wallet Input Block
  Allows customers to enter their Starknet wallet address for loyalty points
{% endcomment %}

<div class="enlivora-wallet-block" style="margin: 20px 0; padding: 20px; border: 1px solid #e5e5e5; border-radius: 8px; background: #fafafa;">
  <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 12px;">
    <span style="font-size: 24px;">âš¡</span>
    <h3 style="margin: 0; font-size: 16px; font-weight: 600;">Earn Loyalty Points</h3>
  </div>
  
  <p style="margin: 0 0 12px; font-size: 14px; color: #666;">
    Enter your Starknet wallet to receive {{ block.settings.points_per_dollar }} ELP points per $1 spent.
  </p>
  
  <input 
    type="text" 
    name="attributes[starknet_wallet]"
    placeholder="0x... (Argent or Braavos address)"
    pattern="^0x[a-fA-F0-9]{63,64}$"
    style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px; font-family: monospace;"
  >
  
  <p style="margin: 8px 0 0; font-size: 12px; color: #999;">
    Don't have a wallet? <a href="https://www.argent.xyz/" target="_blank" style="color: #6366f1;">Get Argent X</a> or <a href="https://braavos.app/" target="_blank" style="color: #6366f1;">Braavos</a>
  </p>
</div>

{% schema %}
{
  "name": "Enlivora Wallet",
  "target": "section",
  "settings": [
    {
      "type": "range",
      "id": "points_per_dollar",
      "label": "Points per $1",
      "min": 1,
      "max": 100,
      "default": 10
    }
  ]
}
{% endschema %}
