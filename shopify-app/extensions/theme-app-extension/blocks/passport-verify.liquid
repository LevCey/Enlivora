<div class="enlivora-passport-verify">
  {% if product.metafields.enlivora.passport_active %}
    <!-- Container with Responsive Margins -->
    <div class="enlivora-wrapper">
      <div style="background: #000000; border: 2px solid #D4AF37; border-radius: 12px; overflow: hidden; text-align: center; box-shadow: 0 20px 50px rgba(0,0,0,0.6); font-family: 'Garamond', 'Georgia', serif; position: relative; z-index: 10;">
        
        <!-- Genesis Key Banner -->
        <div style="width: 100%; height: 200px; background: #000; overflow: hidden; border-bottom: 1px solid #D4AF37; display: flex; align-items: center; justify-content: center;">
          <img src="{{ 'genesis.jpg' | asset_url }}" 
               style="width: 100%; height: 100%; object-fit: cover; display: block;" 
               alt="Starknet Genesis Key">
        </div>
        
        <div style="padding: 30px 24px;">
          <div style="display: flex; align-items: center; justify-content: center; gap: 12px; margin-bottom: 20px;">
            <span style="font-size: 24px;">üõ°Ô∏è</span>
            <h3 style="color: #D4AF37; margin: 0; font-size: 16px; letter-spacing: 3px; text-transform: uppercase; font-weight: bold;">
              AUTHENTICITY GUARANTEED
            </h3>
          </div>
          
          <p style="color: #d1d1d1; font-size: 14px; line-height: 1.7; margin-bottom: 25px; font-weight: 300; font-style: italic;">
            This luxury artifact is secured by the Enlivora Protocol on Starknet. 
            Its origin and ownership are immutable and verifiable on-chain.
          </p>

          <div style="background: linear-gradient(90deg, rgba(212,175,55,0) 0%, rgba(212,175,55,0.15) 50%, rgba(212,175,55,0) 100%); color: #D4AF37; font-size: 13px; padding: 8px 20px; display: inline-block; margin-bottom: 25px; border-top: 1px solid rgba(212,175,55,0.3); border-bottom: 1px solid rgba(212,175,55,0.3); letter-spacing: 1px;">
            PASSPORT ID: <span style="font-family: 'Courier New', monospace; font-weight: bold; color: #fff;">{{ product.metafields.enlivora.token_id | default: "ENL-GENESIS-2025" }}</span>
          </div>

          <a href="https://pass.enlivora.com/verify/{{ product.metafields.enlivora.token_id | default: '1' }}" target="_blank" 
             style="display: block; width: 80%; margin: 0 auto; background: #D4AF37; color: #000; padding: 18px 0; text-decoration: none; font-weight: 800; font-size: 14px; letter-spacing: 2px; text-transform: uppercase; border-radius: 2px; transition: 0.4s;">
            Verify Provenance
          </a>
        </div>
        
        <!-- Subtle Bottom Glow -->
        <div style="height: 4px; background: linear-gradient(90deg, #000 0%, #D4AF37 50%, #000 100%); opacity: 0.5;"></div>
      </div>
    </div>

    <style>
      /* Mobile First Strategy */
      .enlivora-wrapper {
        margin: 20px 0; /* Standard spacing for Mobile */
      }

      /* Desktop Adjustment */
      @media (min-width: 768px) {
        .enlivora-wrapper {
          margin: -40px 0 30px 0; /* Negative margin ONLY for Desktop */
        }
      }
    </style>
  {% endif %}
</div>

{% schema %}
{
  "name": "Passport Verify Badge",
  "target": "section",
  "templates": ["product"],
  "settings": [
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#000000" }
  ]
}
{% endschema %}
